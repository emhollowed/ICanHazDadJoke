@model CanIHazDadJoke.Models.HomeModel

<div id="rotatingJokeContainer">
    <p id="rotatingJoke" class="lead text-center">@Model.Joke.Joke</p>
</div>

<div id="jokeSearch">

    <form id="jokeSearchForm" class="form-inline active-cyan-3 active-cyan-4 d-flex justify-content-center" asp-action="Index" asp-controller="Home">
        <i class="fas fa-search" aria-hidden="true"></i>
        <input class="form-control form-control-sm ml-3 w-75" type="text" placeholder="Pun Me" aria-label="Search" asp-for="SearchTerm">
    </form>

    @if (Model.SearchResults != null)
    {
        <ul id="jokeSearchResults" class="list-group list-group-flush">
            @foreach (var joke in Model.SearchResults.Results)
            {
                <li class="list-group-item">@joke.Joke</li>
            }            
        </ul>
    }

</div>





